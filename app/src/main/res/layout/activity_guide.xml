<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/guide_ll_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"/>

    <Button
        android:id="@+id/guide_ib_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guide_ll_point"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="点击进入"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:background="@drawable/start_button_shape"
        android:visibility="gone"
        android:onClick="onClickJump"/>

    <Button
        android:id="@+id/guide_ib_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="@string/splash_jump"
        android:textColor="@color/white"
        android:background="@color/transparent"
        android:layout_marginBottom="20dp"
        android:onClick="onClickJump"/>
</RelativeLayout>