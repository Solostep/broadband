<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/number_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/test_number"
        android:autoLink="phone"
        android:padding="@dimen/dimen_5_dip"/>

    <TextView
        android:id="@+id/number_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_number"
        android:visibility="gone"/>
    <Button
        android:id="@+id/number_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_one"
        android:text="方式二：跳转至拨打页面"
        android:textColor="@color/blue"
        android:onClick="testNumber"
        android:padding="@dimen/dimen_5_dip"/>
    <Button
        android:id="@+id/number_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/number_two"
        android:text="方式三：直接拨打"
        android:textColor="@color/green"
        android:onClick="testNumber"
        android:padding="@dimen/dimen_5_dip"/>

</RelativeLayout>